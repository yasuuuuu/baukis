- @title = '顧客詳細情報'

.table-wrapper
  %table.attributes
    %tr
      %th{ colspan: 2 } 基本情報
    - p1 = CustomerPresenter.new(@customer, self)
    %tr
      %th 氏名
      %td= p1.full_name
    %tr
      %th フリガナ
      %td= p1.full_name_kana
    %tr
      %th 生年月日
      %td.date= p1.birthday
    %tr
      %th 性別
      %td= p1.gender
    %tr
      %th 登録日時
      %td.date= p1.created_at
    %tr
      %th 更新日時
      %td.date= p1.updated_at
    %tr
      %th 個人電話番号(1)
      %td= p1.personal_phones[0]
    %tr
      %th 個人電話番号(2)
      %td= p1.personal_phones[1]
    - if @customer.home_address
      - p2 = AddressPresenter.new(@customer.home_address, self)
      %tr
        %th{ colspan: 2 } 自宅住所
      %tr
        %th 郵便番号
        %td= p2.postal_code
      %trp
        %th 都道府県
        %td= p2.prefecture
      %tr
        %th 市区町村
        %td.date= p2.city
      %tr
        %th 町域、番地など
        %td= p2.address1
      %tr
        %th 建物名、部屋番号等
        %td.date= p2.address2
      %tr
        %th 自宅電話番号(1)
        %td= p2.phones[0]
      %tr
        %th 自宅電話番号(2)
        %td= p2.phones[1]
    - if @customer.work_address
      - p3 = AddressPresenter.new(@customer.work_address, self)
      %tr
        %th{ colspan: 2 } 勤務先
      %tr
        %th 会社名
        %td= p3.company_name
      %tr
        %th 部署名
        %td= p3.division_name
      %tr
        %th 郵便番号
        %td= p3.postal_code
      %tr
        %th 都道府県
        %td= p3.prefecture
      %tr
        %th 市区町村
        %td.date= p3.city
      %tr
        %th 町域、番地など
        %td= p3.address1
      %tr
        %th 建物名、部屋番号等
        %td.date= p3.address2
      %tr
        %th 勤務先電話番号(1)
        %td= p3.phones[0]
      %tr
        %th 勤務先電話番号(2)
        %td= p3.phones[1]
